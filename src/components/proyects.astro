---
const { cards } = Astro.props;
---
  <section class="bg-emerald-900/40 py-10" id="proyectos" >
    <h1 class="text-white font-semibold text-2xl text-center border-b-2 border-emerald-300 w-1/2 mx-auto pb-2" data-aos="fade-down-right">Mis Proyectos</h1>
    <div class="container mx-auto grid grid-cols-1 mt-16 w-[85%] md:w-[75%] gap-5">
    {
      cards.map( card => (
      <article class="bg-cyan-900/40 group rounded-lg overflow-hidden flex items-center justify-between"data-aos="fade-right" data-aos-delay="200">
      <div class="overflow-hidden w-1/3 h-full">
            <img class="object-cover transition-transform duration-500 group-hover:transform group-hover:scale-120 w-full h-full" src={card.image} alt={card.name}>
          </div>
          <div class="p-5 space-y-3 w-full">
            <h2 class="text-cyan-200 font-bold text-lg">{card.name}</h2>

            <div class="text-white text-sm">
              {card.description} 
            </div>

            <div class="flex flex-wrap gap-3 py-5">
              {
                card.technologies.map( tech => (
                  <div class="">
                    <p class="py-1 px-1.5 bg-gradient-to-r from-cyan-900 via-cyan-700 to-cyan-500 rounded-lg text-white">{tech}</p>
                  </div>
                ))
              }
            </div>

            <div class="flex justify-between">
              <a class="bg-cyan-600/60 rounded py-1 px-1.5 text-gray-200 font-semibold" href={card.website} target="_blank" rel="noopener noreferrer">Web Link</a>
              <a class="text-gray-100 font-semibold py-1 px-1.5 z-20 after:content-[''] relative after:bg-emerald-500/40 after:rounded after:px-1.5 after:py-1 after:absolute after:w-full after:h-full after:left-0 after:top-0 after:transform after:scale-0 hover:after:scale-100 after:transition-all after:duration-500" href={card.repository} target="_blank" rel="noopener noreferrer">Repositorio</a>
            </div>
          </div> 
        </article>
      ))
    }
    </div>
  </section>
